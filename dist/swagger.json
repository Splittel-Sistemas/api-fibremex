{
  "swagger": "2.0",
  "info": {
    "title": "API - Fibremex Ecommerce",
    "version": "1.0.0"
  },
  "paths": {
    "/local/GetProducts.php": {
      "post": {
        "tags": ["Productos"],
        "summary": "Obtiene la lista de productos",
        "parameters": [
          {
            "name": "X-Email",
            "in": "header",
            "required": true,
            "type": "string"
          },
          {
            "name": "X-CardCode",
            "in": "header",
            "required": true,
            "type": "string"
          },
          {
            "name": "X-ApiKey",
            "in": "header",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de productos",
            "schema": {
              "type": "object",
              "properties": {
                "status": { "type": "string" },
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "Codigo": { "type": "string" },
                      "Descripcion": { "type": "string" },
                      "Stock": { "type": "number", "format": "float" },
                      "Precio": { "type": "number", "format": "float" },
                      "Moneda": { "type": "string" },
                      "Imagen": { "type": "string" },
                      "FichaTecnica": { "type": "string" },
                      "Marca": { "type": "string" },
                      "Categoria": { "type": "string" },
                      "Subcategoria": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Faltan credenciales"
          },
          "403": {
            "description": "Credenciales incorrectas"
          },
		   "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    }
  }
}